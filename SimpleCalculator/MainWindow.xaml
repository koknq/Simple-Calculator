        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculator"
        mc:Ignorable="d"
        Title="Simple Calculator" Height="500" Width="400" WindowStartupLocation="CenterScreen" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Topmost="True">
    <Grid Background="DimGray">
