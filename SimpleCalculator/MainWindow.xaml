            </Button.Foreground>
            <Button.BorderBrush>
                <SolidColorBrush Color="DarkGray"></SolidColorBrush>
            </Button.BorderBrush>
        </Button>

        <TextBox x:Name="textBox" PreviewTextInput="TakeOnlyNumbers" TextWrapping="Wrap" Height="60" VerticalAlignment="Top" Margin="20,40,20,0" Foreground="White" Background="Black" BorderThickness="1,1,1,1" Text="" TextAlignment="Left" FontSize="40" FontFamily="Verdana" FontWeight="ExtraBold" SelectionTextBrush="White">
            
